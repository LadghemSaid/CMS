{% extends '@PiedWebCMS/base.html.twig' %}

{% block title %}{{ page.title|striptags }}{% endblock %}

{% block robots %}
    {% if page.metaRobots is defined and page.metaRobots is not null %}
        <meta name="robots" content="{{ page.metaRobots }}">
    {% endif %}
    <link rel="canonical" href="{{ app_base_url is app_base_url ? app_base_url : '' }}{{ page(page.realSlug) }}" />
{% endblock %}

{% block body %}

    {% block navbar %}
        {% include '@PiedWebCMS/component/_menu.html.twig' with {'logo':{'anchor':logo_alt}} only %}
    {% endblock %}

    {% block content %}
        {% include '@PiedWebCMS/page/_page.html.twig' %}
    {% endblock %}


    {% block extra_footer %}
        {% if page.slug is defined and page.slug == 'homepage' or page.slug is null %}
            {% include '@PiedWebCMS/page/_extra_footer.html.twig' %}
        {% endif %}
    {% endblock %}

{% endblock %}
