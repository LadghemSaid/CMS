{% extends '@PiedWebCMS/page/page_default.html.twig' %}

{% block content %}

    {% block title %}
        {% include '@PiedWebCMS/page/_hero-banner.html.twig' %}
    {% endblock %}

    {% block main_content %}
        {% if page.readableContent is not empty %}
            <section class="{{container is defined ? ' '~container : 'container container-txt mb-5 mt-5'}}">

                    {{ include(template_from_string(page.readableContent)) }}

                {% block after_content %}{% endblock %}

            </section>
        {% endif %}
    {% endblock %}
{% endblock %}
