{% extends '@PiedWebCMS/page/page.html.twig' %}

{% block body %}

    {% block navbar %}
        {% include '@PiedWebCMS/page/_menu.html.twig' with {'logo':{'alt':logo_alt}} only %}
    {% endblock %}

    {% block header %}
        {% include '@PiedWebCMS/page/_header.html.twig' %}
    {% endblock %}

    {% block content %}
        {% if page.readableContent is not empty %}
            {{ include(template_from_string(page.readableContent)) }}
        {% endif %}
    {% endblock %}

    {% block footer %}
        {% include '@PiedWebCMS/page/_footer.html.twig' %}
    {% endblock %}

    {% block extra_footer %}
        {% include '@PiedWebCMS/page/_extra_footer.html.twig' %}
    {% endblock %}

{% endblock %}
